{
  "manifest_version": 3,
  "name": "ChatGPT Assistant Extension",
  "version": "0.0.2",
  "description": "Adds extra features like bulk deletes and conversation exports to ChatGPT.",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "http://chat.openai.com/*"],
      "js": ["main.js"]
    }
  ],
  "permissions": ["activeTab", "tabs", "storage", "webRequest"],
  "host_permissions": ["https://chat.openai.com/*", "http://chat.openai.com/*"]
}
